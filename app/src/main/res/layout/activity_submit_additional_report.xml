<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_submit_additional_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.gatech.group23.group23project.controllers.SubmitAdditionalReportActivity">

    <TextView
        android:text="Longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minLongText"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/maxLongBox2"
        android:hint="Longitude"
        android:layout_below="@+id/minLongText"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minLatText"
        android:layout_below="@+id/maxLongBox2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/maxLatBox2"
        android:layout_below="@+id/minLatText"
        android:layout_alignParentStart="true"
        android:hint="Latitude" />


    <TextView
        android:text="Is the water purple?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conditionText"
        android:layout_below="@+id/maxLatBox2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conditionText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/purpleSpinner" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/purpleSpinner"
        android:layout_marginTop="19dp"
        android:id="@+id/submitButton2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/cancelButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/submitButton2"
        android:text="Cancel" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/reports"
        android:layout_above="@+id/maxLongBox2"
        android:layout_alignParentStart="true" />

</RelativeLayout>
